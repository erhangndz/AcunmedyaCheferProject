@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
}

<h3>Ürün Güncelleme</h3>

<form method="post">
    <input type="hidden" asp-for="ProductId" />
    <div class="form-group">
        <label>Ürün Adı</label>
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Görsel Url</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ürün Fiyatı</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kategori</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control">
            <option disabled>Kategori Seçiniz</option>
        </select>
    </div>
    <button class="btn btn-outline-primary">Güncelle</button>
</form>